{% extends 'base.html.twig' %}

{% block title %}Annuaire Snowtricks!{% endblock %}

  {% block header %}
      <!-- Header -->
      <section class="page-section">
          <header class="masthead image-box" style="--image-url('../public/uploads/images/home_img.jpg')">
              <div class="container">
                  <div class="intro-text">
                      <div class="intro-lead-in">Bienvenue sur l'annuaire !</div>
                      <div class="intro-heading text-uppercase">Snowtricks</div>
                      <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#tricks">Voir plus</a>
                  </div>
              </div>
          </header>
      </section>
  {% endblock %}

{% block body %}

    <section class="page-section empty-top2">
        <div class="container">
            <h2 class="text-center mb-5" id="tricks">
                Liste des Figures :
            </h2>

            <div class="row row-cols-1 row-cols-md-2">
                {% for trick in tricks %}
                <div class="mb-4 col-md-4">
                    <div class="card">
                        <a href="{{ path('trick_show', {'slug': trick.slug }) }}">
                            <img src="{{ asset('uploads/images/') }}{{ trick.defaultImage }}" class="card-img-top" alt="{{ trick.name }}">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><a href="{{ path('trick_show', {'slug': trick.slug }) }}"> {{ trick.name }} </a></h5>
                            <p class="card-text">Groupe(s) :
                                {% for group in trick.groupOfTricks %}
                                    {{ group.name~' - ' }}
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% include 'pagination/pagination.html.twig' %}

        </div>

    </section>

{% endblock %}
