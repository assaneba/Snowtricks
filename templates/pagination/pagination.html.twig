{% if pagination.nbPages > 0 %}

    {% if pagination.slug %}
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item {% if pagination.page == 1 %} remove-btn {% endif %}">
                    <a class="page-link" href="{{ path(pagination.routeName, { 'page': pagination.page-1, 'slug': pagination.slug }) }}" tabindex="-1">Précédent</a>
                </li>

                {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
                    <li class="page-item {% if p == pagination.page %}active{% endif %}">
                        <a class="page-link" href="{{ path(pagination.routeName, { 'page': p, 'slug': pagination.slug }) }}">
                            {{ p }} <span class="sr-only">(current)</span>
                        </a>
                    </li>
                {% endfor %}

                <li class="page-item {% if pagination.page == pagination.nbPages %} remove-btn {% endif %}">
                    <a class="page-link" href="{{ path(pagination.routeName, { 'page': pagination.page+1, 'slug': pagination.slug }) }}">Suivant</a>
                </li>
            </ul>
        </nav>

    {% else %}
        <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item {% if pagination.page == 1 %} remove-btn {% endif %}">
                    <a class="page-link" href="{{ path(pagination.routeName, { 'page': pagination.page-1 }) }}" tabindex="-1">Précédent</a>
                </li>

                {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
                    <li class="page-item {% if p == pagination.page %}active{% endif %}">
                        <a class="page-link" href="{{ path(pagination.routeName, { 'page': p }) }}">
                            {{ p }} <span class="sr-only">(current)</span>
                        </a>
                    </li>
                {% endfor %}

                <li class="page-item {% if pagination.page == pagination.nbPages %} remove-btn {% endif %}">
                    <a class="page-link" href="{{ path(pagination.routeName, { 'page': pagination.page+1 }) }}">Suivant</a>
                </li>
            </ul>
        </nav>

    {% endif %}

{% endif %}
