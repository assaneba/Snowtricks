{% extends 'base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}


{% block body %}

    <section class="page-section" id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center mt-5 mb-4">
                    <h2 class="section-heading text-uppercase">
                        Commentaires en attente de validation
                    </h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">

                    <table class="table table-hover" id="sortAction">
                        <thead>
                        <tr class="text-white">
                            <th scope="col">#</th>
                            <th scope="col">Contenu</th>
                            <th scope="col">Date du commentaire</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comment in comments %}
                            <tr>
                                <th scope="row">{{ loop.index }}</th>
                                <td>{{ comment.content }}</td>
                                <td>{{ comment.createdAt | date("d/m/Y") }}</td>
                                <td>
                                    <a href="{{ path('validate-comments', {'id' : comment.id}) }}" type="button" class="">Publier</a>
                                </td>
                                <td>
                                    <a href="{{ path('delete-com', { 'id' : comment.id }) }}" class="btn btn-danger" type="button">Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
